# ===========================================
# ADSYNC MEDIA HUB - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SUPABASE CONFIGURATION (RECOMMENDED)
# ===========================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# LEGACY DATABASE CONFIGURATION (FALLBACK)
# ===========================================
# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=your_database_name
PG_USER=your_username
PG_PASSWORD=your_password

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=your_database_name

# ===========================================
# API CONFIGURATION
# ===========================================
# Tableau Integration
TABLEAU_SERVER_URL=your_tableau_server_url
TABLEAU_USERNAME=your_tableau_username
TABLEAU_PASSWORD=your_tableau_password
TABLEAU_SITE_ID=your_site_id

# External API Endpoints
FUNNEL_API_URL=your_funnel_api_url
GOALS_API_URL=your_goals_api_url
VTO_API_URL=your_vto_api_url
ISSUES_API_URL=your_issues_api_url
SCORECARD_API_URL=your_scorecard_api_url

# Ninety.io Integration
NINETY_API_URL=https://api.ninety.io/v1
NINETY_API_KEY=your_ninety_api_key
NINETY_ACCOUNT_ID=your_account_id

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Server Configuration
PORT=3000
NODE_ENV=development

# Data Refresh Interval (cron format)
DATA_REFRESH_INTERVAL=*/15 * * * *

# Session Configuration
SESSION_SECRET=your_session_secret_here

# ===========================================
# DATA CONFIGURATION
# ===========================================
# Pre-loaded data (JSON format)
FUNNEL_DATA={"leads": 1250, "prospects": 875, "qualified": 425, "proposals": 180, "closed": 85, "revenue": 750000}
